	//write length (4 bytes)
	/*
	 * int [0][1][2][3]
	 * to
	 * [0]
	 * [1]
	 * [2]
	 * [3] 
	 */
	private void WriteLength(String src,FileOutputStream fout)
	{
		int nNameLength = src.length();
		final int L = 4;
		byte[] bts=new byte [L];
		
		bts[0] = (byte)(nNameLength>>>24);
		bts[1] = (byte)(nNameLength>>>16); 
		bts[2] = (byte)(nNameLength>>>8);
		bts[3] = (byte)(nNameLength);
		
		try {
			 fout.write(bts);
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
	
	private int ReadLength(FileInputStream fin)
	{
		final int L = 4;
		byte bts[] = new byte [L];
		int nLength=0;
		try {
			if(L!=fin.read(bts))
				return -1;
			for(int i=0;i<L;i++)
			{
				nLength&=
			}
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
	
}